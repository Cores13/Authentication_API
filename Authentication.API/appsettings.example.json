{
  "ConnectionStrings": {
    "Default": "Server=localhost;Initial Catalog=ApplicationDb;Integrated Security=True;Trusted_Connection=True;Encrypt=True;TrustServerCertificate=True;"
    //"Default": "Server=localhost\\sqlexpress;Initial Catalog=ApplicationDb;Integrated Security=True;Trusted_Connection=True;Encrypt=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "SecretKey": "jwt-secret",
    "AccessTokenExpiresInMinutes": 10,
    "Issuer": "https://localhost:44347/",
    "Audience": "http://localhost"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "/logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "MailSettings": {
    "FrontendUrl": "http://localhost:3000",
    "DisplayName": "Example app",
    "From": "example@gmail.com",
    "Host": "smtp.gmail.com",
    "Password": "example",
    "Port": 465,
    "UserName": "example@gmail.com",
    "UseSSL": true,
    "UseStartTls": false
  },
  "AllowedHosts": "*"
}
